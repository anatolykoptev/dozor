# Dozor Server Configuration
# Copy this file to .env and fill in your values

# REQUIRED: Server SSH connection
SERVER_HOST=your-server-ip-or-hostname
SERVER_USER=ubuntu
SERVER_PORT=22

# OPTIONAL: Path to SSH private key (if not using default ~/.ssh/id_rsa)
# SERVER_SSH_KEY=/path/to/your/key

# REQUIRED: Path to docker-compose project on server
SERVER_COMPOSE_PATH=~/your-project

# REQUIRED: Comma-separated list of services to monitor
SERVER_SERVICES=nginx,postgres,redis

# OPTIONAL: SSH timeout in seconds (default: 30)
SERVER_TIMEOUT=30

# Alert thresholds (optional)
ALERT_ERROR_THRESHOLD=5
ALERT_RESTART_THRESHOLD=1
ALERT_MEMORY_THRESHOLD=90.0
ALERT_CPU_THRESHOLD=90.0
